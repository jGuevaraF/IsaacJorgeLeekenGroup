
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript" src="~/Scripts/Empleado/CRUD.js"></script>

<h2 class="text-center">Empleado</h2>

<div class="text-center">
    <button class="btn btn-success m-3" onclick="showModal()">Agregar</button>
</div>
<div class="col-md-12">

    <table id="tablaEmpleado" class="table table-hover" border="1">
        <thead class="table-dark">
            <tr>
                <th class="text-center" scope="col">Editar</th>
                <th class="text-center" scope="col">Número Nomina</th>
                <th class="text-center" scope="col">Nombre</th>
                <th class="text-center" scope="col">Apellido Paterno</th>
                <th class="text-center" scope="col">Apellido Materno</th>
                <th class="text-center" scope="col">Estado</th>
                <th class="text-center" scope="col">Eliminar</th>
            </tr>

        </thead>
        <tbody></tbody>
    </table>
</div>

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="modalClose()">×</button>
                <h4 class="modal-title">Formulario Empleado</h4>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group d-flex justify-content-center m-2">
                        <input  class="form-control" id="txtid" placeholder="Id"  type="hidden"/>
                    </div>
                    <div class="form-group d-flex justify-content-center m-2">
                        <input type="text" class="form-control" id="txtNumeroNomina" placeholder="Número de Nómina" />
                    </div>
                    <div class="form-group d-flex justify-content-center m-2">
                        <input type="text" class="form-control" id="txtNombre" placeholder="Nombre" />
                    </div>
                    <div class="form-group d-flex justify-content-center m-2">
                        <input type="text" class="form-control" id="txtApPaterno" placeholder="Apellido Paterno" />
                    </div>
                    <div class="form-group d-flex justify-content-center m-2">
                        <input type="text" class="form-control" id="txtApMaterno" placeholder="Apellido Materno" />
                    </div>
                    <div class="form-group d-flex justify-content-center m-2">
                        <select id="ddlEntidad">
                            <option value="0">Selecciona un valor</option>
                        </select>
                    </div>
                </form>
            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-success m-1" id="btnUpdate" onclick="guardar()">Guardar</button>
                <button type="button" class="btn btn-danger m-1" data-dismiss="modal" onclick="modalClose()">Cancelar</button>
            </div>
        </div>
    </div>
</div>

